(defvar svn-checksum nil)
(make-variable-buffer-local 'svn-checksum)

(defvar svn-up-to-date nil)
(make-variable-buffer-local 'svn-up-to-date)

(defvar svn-modified nil)
(make-variable-buffer-local 'svn-modified)


(defun svn-tmp-buffer (name)
  (let ((buff (get-buffer-create (concat "*svn " name "*"))))
    (empty-buffer buff)
    buff))


(defun svn-status ()
  (interactive) ;; why not?
  (let ((fname (file-name-nondirectory (buffer-file-name)))
	(svn (concat (file-name-directory (buffer-file-name)) "/.svn"))
	(buff (svn-tmp-buffer "status")))
    (when (and (file-exists-p svn)
	       (eq (call-process "svn" nil buff nil "info" fname) 0)
	       (goto-char 1 buff)
	       (re-search-forward "Checksum: \\([0-9a-fA-F]+\\)" nil t nil buff))
      (setq svn-checksum
	    (buffer-substring (match-beginning 1) (match-end 1) buff))
      (svn-check-status))))


;; I cannot get the md5 function to match svn... worry about it later
(defun my-md5 (buff)
  (let ((fname (file-name-nondirectory (buffer-file-name buff)))
	(buff (svn-tmp-buffer "md5"))
	md5)
    (when (eq (call-process "md5sum" nil buff nil fname) 0)
      (goto-char 1 buff)
      (when (looking-at "[0-9a-fA-F]+" buff)
	(setq md5 (buffer-substring (match-beginning 0) (match-end 0) buff))))
    (kill-buffer buff)
    md5))


(defun svn-check-status ()
  (interactive) ;; why not?
  (when svn-checksum
    (let ((md5sum (my-md5 (current-buffer))))
      (if (string= md5sum svn-checksum)
	  (setq svn-modified nil
		svn-up-to-date t)
	(setq svn-modified t
	      svn-up-to-date nil)))))

(add-minor-mode 'svn-up-to-date " svn")
(add-minor-mode 'svn-modified " svn+")

(add-hook 'find-file-hooks 'svn-status)
(add-hook 'after-save-hook 'svn-check-status)
(add-hook 'after-revert-hook 'svn-check-status)
