.SUFFIXES: .el .elc

EMACS ?= xemacs

.el.elc:
	$(EMACS) -batch -q -l batch-helper.el -f batch-byte-compile $<

ELCS =  arm.elc \
	backup.elc\
	browse-kill-ring.elc\
	cpuinfo.elc\
	dired-extras.elc\
	filter.elc\
	find-file.elc\
	git-diff.elc \
	gopher.elc\
	greedy-delete.elc\
	h2t.elc\
	http.elc\
	intellimouse.elc\
	libc-mode.elc\
	lxr.elc\
	mpg.elc\
	my-calc.elc\
	ppc-env.elc \
	slashdot.elc\
	smerge.elc\
	svn.elc\
	trim.elc\
	vc-ediff.elc\
	ws-trim.elc\

OBSOLETE= \
	comics.elc\

ifneq ($(findstring xemacs,$(EMACS)),)
EXTRA = auto-autoloads.elc
endif

all:	$(ELCS) $(EXTRA)

auto-autoloads.el: $(ELCS)
	rm -f auto-autoloads.el
ifeq ($(EMACS),sxemacs)
	$(EMACS) -batch -f batch-create-autoloads .
else
	$(EMACS) -batch -q -no-site-file -l autoload -f batch-update-directory .
endif

tags:
	etags *.el

clean:
	rm -f *.elc auto-autoloads.el TAGS
